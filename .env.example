# Polymarket API (Get from: https://polymarket.com/settings/api)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_SECRET=your_secret_here
POLYMARKET_PRIVATE_KEY=your_wallet_private_key_here
POLYMARKET_PROXY_ADDRESS=your_proxy_wallet_address

# OpenAI
OPENAI_API_KEY=your_openai_key_here

# News API (Optional - get free key from newsapi.org)
NEWS_API_KEY=your_news_api_key_here

# Trading Configuration
INITIAL_CAPITAL=25.0
MAX_POSITION_SIZE=0.15        # 15% max per position
RISK_PER_TRADE=0.05           # 5% risk per trade
MAX_CONCURRENT_POSITIONS=3
AUTO_COMPOUND=true
MIN_EDGE_THRESHOLD=0.10       # 10% minimum edge to enter
MIN_CONFIDENCE=0.70           # 70% confidence minimum

# Risk Limits
MAX_DAILY_LOSS=0.10           # 10% max daily loss
KILL_SWITCH_DRAWDOWN=0.20     # 20% total drawdown triggers stop
STOP_LOSS_PCT=0.20            # 20% stop loss per position
TAKE_PROFIT_PCT=1.0           # 100% take profit (2x)

# Monitoring
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Execution Mode
MODE=test  # test or live
